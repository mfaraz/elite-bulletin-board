<div id="optionBox" title="{{LANG_OPTIONS}}" style="width:400px;text-align:left;">
	<div class="pContent">
	<a href="#editor" class="toggle"><span>{{LANG_DISABLERTF}}</span></a> -  <a href="#smiles" onclick="$('#moreSmiles').dialog('open');">{{LANG_SMILES}}</a><br />
	{% if GAC_IMPORTANT == TRUE %}
	{{LANG_POSTTYPE}}:&nbsp;<input type="radio" name="post_type" value="1" />{{LANG_IMPORTANT}}&nbsp;<input type="radio" name="post_type" value="0" />{{LANG_NORMAL}}<br />
	{% else %}
	<input type="hidden" name="post_type" value="0" />
	{% endif %}	
	<input type="checkbox" name="subscribe" value="1" />{{LANG_NOTIFY}}<br />
	<input type="checkbox" name="no_smile" value="1" />{{LANG_DISABLESMILES}}<br />
	<input type="checkbox" name="no_bbcode" value="1" />{{LANG_DISABLEBBCODE}}<br />
	</div>
</div>
<input type="hidden" name="PollTopic" value="{{POLLOPTION}}" />
<input type="hidden" name="bid" value="{{BID}}" />
</form><br />
</div>
<script type="text/javascript">
$('#topic').focus();

new FormValidator('frmNewTopic', [{
	name: 'username',
	display: '{{LANG_USERNAME}}',
	rules: 'required'
}, {
	name: 'password',
	display: '{{LANG_PASSWORD}}',
	rules: 'required'
}], function(errors, event) {

	if (errors.length > 0) {
		$('#validateRes').empty();
		$('#validateRes').append(errors.join('<br />'));
		$('#div_ErrMsg').show();
	} else {
		event.returnValue = true; //allow form to process.
	}

});
</script>

