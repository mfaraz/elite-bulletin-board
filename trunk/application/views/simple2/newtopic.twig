	<input type="text" name="poll_otp7" id="opt7" class="text" size="30" />
	<br />
	{{LANG_OPTION8}}<br />
	<input type="text" name="poll_otp8" id="opt8" class="text" size="30" />
	<br />
	{{LANG_OPTION9}}<br />
