{% extends "master.twig" %}
{% block title %}{{boardName}} - {{pageTitle}}{% endblock %}
{% block bodyRender %}

{{BREADCRUMB|raw}}<br />

<p class="ui-widget-content">{{LANG_TEXT}}</p>

{{FORMWARN|raw}}
<table border="0" class="table" cellspacing="1" cellpadding="1">
<tr>
	<td class="ui-widget-header" colspan="2" align="center">{LANG-SUBMIT}</td>
</tr><tr>
	<td class="ui-widget-content">{{LANG_WARNOPTION}}</td>
	<td class="ui-widget-content">
		<input type="radio" name="warnopt" value="10" /><span  class="raisewarn">{{LANG_RAISEWARN}}</span><br />
		<input type="radio" name="warnopt" value="-10" /><span class="lowerwarn">{{LANG_LOWERWARN}}</span>
	</td>
</tr><tr>
	<td class="ui-widget-content">{{LANG_WARNREASON}}</td>
	<td class="ui-widget-content">
		<textarea name="reason" id="reason" rows="5" cols="60" class="text"></textarea>
	</td>
</tr><tr>
	<td class="ui-widget-content">{{LANG_SUSPENDIONLENGTH}}<a href="#" tabindex="-1" class="hint">[?]<span>{{LANG_SUSPENDHINT}}</span></a></td>
	<td class="ui-widget-content">
		<input type="text" name="suspend" size="5" class="text" value="{{SUSPENDIONLENGTH}}" />
	</td>
</tr><tr>
	<td class="ui-widget-content">{{LANG_CONTACTOPTION}}</td>
	<td class="ui-widget-content">
		<select name="contactopt" class="text">
			<option value="None">{{LANG_NOCONTACT}}</option>
			<option value="PM">{{LANG_PMCONTACT}}</option>
			<option value="Email">{{LANG_EMAILCONTACT}}</option>
		</select>
	</td>
</tr><tr>
	<td class="ui-widget-content">{LANG_CONTACT_TEXT}}</td>
	<td class="ui-widget-content">
		<textarea name="body" rows="5" cols="60" class="text" id="contactmsg"></textarea>
	</td>
</tr><tr>
	<td class="ui-widget-header" colspan="2" align="center"><input type="submit" value="{{LANG_SUBMIT}}" class="submit" /></td></tr>
</table>
<input type="hidden" name="user" value="{{USER}}" />
</form>
{% endblock %}